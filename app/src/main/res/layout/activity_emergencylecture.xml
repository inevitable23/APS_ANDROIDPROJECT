<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_emergencylecture"
    tools:context="resolution.ex6.vr.aps.EmergencylectureActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.95"
            android:layout_height="match_parent"
            android:id="@+id/emergency_button1"
            android:src="@drawable/stepone"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/emergency_button2"
            android:src="@drawable/step2_off"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1.10"
            android:layout_height="match_parent"
            android:id="@+id/emergency_button3"
            android:src="@drawable/step3_off"
            android:adjustViewBounds="true"
            android:maxHeight="3dp"
            android:maxWidth="10dp"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.89"
            android:layout_height="match_parent"
            android:id="@+id/emergency_button4"
            android:src="@drawable/step4_off"
            android:adjustViewBounds="true"
            android:maxHeight="3dp"
            android:maxWidth="10dp"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/container">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="이전"
            android:id="@+id/prevButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="다음"
            android:id="@+id/nextButton"/>


    </LinearLayout>

</LinearLayout>
